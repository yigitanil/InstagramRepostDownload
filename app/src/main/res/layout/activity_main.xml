<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/ipaste"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="0.0dip"
            android:paddingLeft="0.0dip"
            android:paddingRight="0.0dip"
            android:src="@drawable/pasteicon" />

        <EditText
            android:id="@+id/ylink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawableRight="@drawable/abs__ic_clear_holo_light"
            android:ems="10"
            android:gravity="center"
            android:hint="Paste an url"
            android:textColor="@color/gray"
            android:imeOptions="actionSearch"
            android:paddingRight="4dp"
            android:singleLine="true"/>

        <ImageView
            android:id="@+id/isearch"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:onClick="Search"
            android:gravity="center_vertical"
            android:paddingTop="10.0dip"
            android:paddingBottom="0.0dip"
            android:paddingLeft="0.0dip"
            android:paddingRight="0.0dip"
            android:src="@drawable/search_icon" />
        />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/mediaLayout"
        >

    <ImageView
        android:id="@+id/image"
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"

        />



    <LinearLayout
        android:id="@+id/rtLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="3dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/rt1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/rt2" />

        <ImageView
            android:id="@+id/rt2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"

            android:src="@drawable/rt1" />

        <ImageView
            android:id="@+id/rt3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"

            android:src="@drawable/rt3" />

        <ImageView
            android:id="@+id/rt4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/rt4" />

        <ImageView
            android:id="@+id/rt0"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/rt0" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/btLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="3dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/repost"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            android:drawableLeft="@drawable/retweet32"
            android:text="Repost" />

        <Button
            android:id="@+id/download"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/download32"
            android:text="Download" />

    </LinearLayout>
</LinearLayout>

    <com.startapp.android.publish.banner.Banner
        android:id="@+id/startAppBanner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>